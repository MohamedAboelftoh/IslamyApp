<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/headOfSepha"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       style="@style/headSebhaStyle"
        android:layout_marginStart="35dp"
        />
    <ImageView
        android:id="@+id/bodyOfSepha"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/headOfSepha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-25dp"
        style="@style/bodySebhaStyle"
        />

    <TextView
        android:id="@+id/num_taspeh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodyOfSepha"
        android:text="عدد التسبيحات"
        android:textSize="25sp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/num_Of_taspeh"
        android:layout_width="69dp"
        android:layout_height="81dp"
        app:layout_constraintTop_toBottomOf="@id/num_taspeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="300dp"
        android:text="0"
        style="@style/textCountSephaStyle"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/shape_of_num_taspeh"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_taspeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num_Of_taspeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="300dp"
        android:text="سبحان الله"
        style="@style/btnCountSephaStyle"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>